<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_violet_dark">

    <!-- Fond dégradé subtil (profondeur) -->
    <View
        android:id="@+id/bg_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_gradient_violet_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo principal -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_smarttune_logo"
        android:contentDescription="SmartTune"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Titre principal (gradient via code) -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre musique,\nPartout, Toujours"
        android:textColor="#FF6B6B"
        android:textSize="34sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sous-titre -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Écoutez, découvrez et partagez avec une communauté passionnée."
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boutons (MaterialButton pour ripple + style) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Commencer maintenant"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient_rounded"
        app:cornerRadius="28dp"
        app:rippleColor="#33FFFFFF"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_more" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_more"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="En savoir plus"
        android:textColor="#00D9FF"
        android:textSize="15sp"
        app:strokeColor="#00D9FF"
        app:strokeWidth="2dp"
        app:cornerRadius="28dp"
        app:rippleColor="#3300D9FF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        app:layout_constraintBottom_toBottomOf="@id/btn_start"
        app:layout_constraintStart_toEndOf="@id/btn_start"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sphère décorative en bas -->
    <ImageView
        android:id="@+id/iv_sphere"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_smarttune_sphere"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="64dp" />

</androidx.constraintlayout.widget.ConstraintLayout>