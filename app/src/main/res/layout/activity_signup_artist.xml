<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_violet_dark">

    <!-- ProgressBar centrée sur le bouton -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="32dp"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo + Titre + Sous-titre -->
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_smarttune_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Devenir artiste sur SmartTune"
                android:textColor="#FD946E"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:text="Partagez votre musique avec le monde entier"
                android:textColor="#BBBBBB"
                android:textSize="16sp" />

            <!-- Grande carte du formulaire -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#141426"
                app:cardCornerRadius="28dp"
                app:cardElevation="10dp"
                app:strokeColor="#3A3A5A"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Note importante -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardBackgroundColor="#3D1A3D"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#FF6B9B"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:text="Note importante"
                                android:textColor="#FF6B9B"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Votre demande sera examinée par notre équipe. Vous recevrez un email une fois votre compte validé."
                                android:textColor="#FF6B9B"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Nom d'artiste -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_username"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Nom d'artiste"
                        app:boxStrokeColor="#FF6B9B"
                        app:hintTextColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_mic_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Prénom et Nom côte à côte -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_prenom"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:hint="Prénom"
                            app:boxStrokeColor="#FF6B9B"
                            app:hintTextColor="#FF6B9B"
                            app:startIconDrawable="@drawable/ic_user_clean"
                            app:startIconTint="#FF6B9B">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_prenom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_nom"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:hint="Nom"
                            app:boxStrokeColor="#FF6B9B"
                            app:hintTextColor="#FF6B9B"
                            app:startIconDrawable="@drawable/ic_user_clean"
                            app:startIconTint="#FF6B9B">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_nom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Date de naissance -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_date_naissance"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Date de naissance"
                        app:boxStrokeColor="#FF6B9B"
                        app:hintTextColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_calendar_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_date_naissance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="yyyy-mm-dd"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Genre – BOUTONS RADIO CONSERVÉS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">


                        <RadioGroup
                            android:id="@+id/rg_genre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_homme"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="#FF6B9B"
                                android:checked="true"
                                android:text="Homme"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/rb_femme"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="#FF6B9B"
                                android:text="Femme"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </RadioGroup>
                    </LinearLayout>

                    <!-- Téléphone (optionnel) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_numTel"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Téléphone (optionnel)"
                        app:boxStrokeColor="#FF6B9B"
                        app:hintTextColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_phone_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_num_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Email"
                        app:boxStrokeColor="#FF6B9B"
                        app:hintTextColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_email_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mot de passe -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Mot de passe"
                        app:boxStrokeColor="#FF6B9B"
                        app:endIconMode="password_toggle"
                        app:hintTextColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_lock_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirmer mot de passe -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_confirm_password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Confirmer le mot de passe"
                        app:boxStrokeColor="#FF6B9B"
                        app:endIconMode="password_toggle"
                        app:hintTextColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_lock_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Biographie artistique -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Biographie artistique"
                        android:textColor="#FD946E"
                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_bio"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxStrokeColor="#FF6B9B"
                        app:startIconDrawable="@drawable/ic_bio_clean"
                        app:startIconTint="#FF6B9B">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_bio"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:padding="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Minimum 50 caractères. Partagez l'histoire musicale !"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />

                    <!-- Upload PDF -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Document de vérification (PDF)"
                        android:textColor="#FD946E"
                        android:textSize="15sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_upload"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#0F0F1F"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeColor="#FF6B9B"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_upload_clean"
                                app:tint="#FF6B9B" />

                            <TextView
                                android:id="@+id/tv_pdf_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:text="PDF de vérification (obligatoire)"
                                android:textColor="#FF6B9B"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:padding="6dp"
                                android:text="Choisir"
                                android:textColor="#FF6B9B"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:text="PDF seulement - pièce d'identité ou contrat (max 5MB)"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Message d'erreur -->
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textColor="#FF6B9B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Bouton Envoyer ma demande -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_gradient_pink_orange"
                android:text="Envoyer ma demande"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:cornerRadius="30dp" />

            <!-- Lien Se connecter -->
            <!-- Lien Connexion -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Déjà un compte ? "
                    android:textColor="#AAAAAA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se connecter"
                    android:textColor="#FD946E"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Retour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onReturnClick"
                android:text="← Retour au choix du type de compte"
                android:textColor="#FF6B9B"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar centré -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:indeterminateTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

