<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fond sombre (base) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#0A0A1E" />
        </shape>
    </item>

    <!-- Glow externe (subtil) -->
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#33FFFFFF"
                android:centerColor="#11FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="radial"
                android:gradientRadius="80dp" />
        </shape>
    </item>

    <!-- Sphère principale (dégradé néon) -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF6B6B"
                android:centerColor="#FF8E53"
                android:centerX="0.3"
                android:centerY="0.3"
                android:endColor="#FFB86C"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>

    <!-- Icône musicale centrale (note de musique) -->
    <item
        android:left="32dp"
        android:right="32dp"
        android:top="32dp"
        android:bottom="32dp">
        <vector
            android:name="music_note"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#FFFFFF"
                android:pathData="M12,3v10.55c-0.59,-0.34 -1.27,-0.55 -2,-0.55 -2.21,0 -4,1.79 -4,4s1.79,4 4,4s4,-1.79 4,-4V7h4V3h-6z"/>
        </vector>
    </item>

</layer-list>